<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:background="@drawable/level_select"
    tools:context="assignment1.panda.LevelSelect">

    <Button
        android:id="@+id/btn_level"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@+id/btn_back"
        android:layout_marginStart="56dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/btn_back"
        android:background="@color/DarkGreen"
        android:text="1"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/btn_level2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/btn_level"
        android:layout_below="@+id/btn_level"
        android:layout_marginTop="55dp"
        android:background="@color/DarkGreen"
        android:text="2"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/btn_level4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/btn_level2"
        android:layout_marginStart="53dp"
        android:layout_toEndOf="@+id/btn_level2"
        android:background="@color/DarkGreen"
        android:text="4"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/btn_level6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/btn_level4"
        android:layout_marginStart="53dp"
        android:layout_toEndOf="@+id/btn_level4"
        android:background="@color/DarkGreen"
        android:text="6"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/btn_level8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/btn_level6"
        android:layout_marginStart="53dp"
        android:layout_toEndOf="@+id/btn_level6"
        android:background="@color/DarkGreen"
        android:text="8"
        android:textColor="@color/White" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_revert"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>